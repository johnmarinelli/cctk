
<div class="row">

  <%= form_for @sketch do |sketch| %>
    <%= render 'shared/error_messages', object: sketch.object %>
    <div class="col-lg-12">
      <%= sketch.text_field :title, class: 'form-control' %>

      <div class="col-lg-6">
        <iframe src="<%= sketch_path @sketch %>"
          style="width: 100%; height: 50vh">
        </iframe>
      </div>

      <div class="col-lg-6">
        <%= sketch.fields_for :snippets, @sketch.snippets do |snippet| %>
          <%= snippet.text_area :content, class: 'form-control' %>
        <% end %>
        <%= sketch.submit 'Save', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
